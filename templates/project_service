[Unit]
Description=Watch the computate app and generate Java code when the Java source files are modified. 
After=network.target

[Service]
Type=simple
User={{ USER_NAME }}
Group={{ USER_NAME }}
WorkingDirectory={{ item.APP_SRC }}
Environment=appName={{ item.APP_NAME }}
Environment=appPath={{ item.APP_SRC }}
Environment=appComputatePath={{ COMPUTATE_SRC }}
Environment=lang={{ APP_LANG }}
ExecStart={{ COMPUTATE_SRC }}/bin/enUS/watch.sh
LimitNOFILE=65000
LimitNPROC=65000
Restart=on-failure

[Install]
WantedBy=multi-user.target

