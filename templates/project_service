[Unit]
Description=Watch the computate app and generate Java code when the Java source files are modified. 
After=network.target

[Service]
Type=simple
WorkingDirectory={{ item.SITE_SRC }}
Environment=appName={{ item.SITE_NAME }}
Environment=appPath={{ item.SITE_SRC }}
Environment=appComputatePath={{ COMPUTATE_SRC }}
Environment=lang={{ SITE_LANG }}
ExecStart={{ COMPUTATE_SRC }}/bin/enUS/watch.sh
LimitNOFILE=65000
LimitNPROC=65000
Restart=on-failure

[Install]
WantedBy=multi-user.target

